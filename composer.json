{
    "name": "datalinx/gettext-context",
    "description": "Implementation of context functions for the PHP gettext extension",
    "keywords": [
        "gettext",
        "context",
        "pgettext"
    ],
    "homepage": "https://github.com/DataLinx/gettext-context",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DataLinx",
            "email": "info@datalinx.si"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "autoload-dev": {
        "psr-4": {
            "DataLinx\\GettextContext\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-gettext": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    }
}
